---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/styles.css"
import Button from "../components/Button.astro";
import CardStandard from "../components/CardStandard.astro"
import Episodecard from "../components/Podcast_side/Episodecard.astro";
import Arstalfilter from "../components/Arstalfilter.astro";
---
<MainLayout>
<main>
<article class="hero">
  <video autoplay loop playsinline class="hero-video">
    <source src="/video/vvh.mp4" type="video/mp4" />
  </video>
</article>
<!-- card 1 -->
<CardStandard 
  header="Hvem er vi?"
  tekst="Vi er Alexander og Peter, to venner med en passion for øl, humor og vilde historier. I Vanvittig Verdenshistorie dykker vi ned i de skøreste fortællinger fra verdenshistorien – fra nutid til fortid."
  img="/billeder/podcast_billeder/Privat_peterogalex.png"
/>
<div class="knap" >
<Button variant="secondary" size="medium">Støt</Button>
<Button variant="primary" size="medium">Om os</Button>
</div>

  <h2>Lyt til et udsnit af podcasten</h2>
 <Arstalfilter />
<!-- VVH Episoder -->

<!-- Card 2 -->
   <CardStandard 
      header="Kom & se os live"
      tekst="Vi turnerer jævnligt med podcasten. På nedenstående link kan du se, om vi snart kommer forbi lige netop DIN by! Du ved aldrig, hvad vi finder på – men vi lover dig, at det bliver sjovt!"
      img="/billeder/podcast_billeder/live_illu 2.svg"
    >
    </CardStandard>
    <div class="knap" >
    <Button variant="primary" size="medium">Live shows</Button>
    </div>



	<main/>
  </MainLayout>
  <style>

/* mobil */
.hero{
  display: none;
}
.knap{
  margin: 16px;
}

h2 {
  margin: 16px;
}
/* desk */
@media (min-width: 768px){
.hero {
  display: block;
  position: relative;
  width: 100%;
  height: 100vh; 
  overflow: hidden;
}
.hero-video {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  object-fit: cover; 
}}
</style>
