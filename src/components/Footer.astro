---
import Newsletter from "../components/Newsletter.astro";
---
<footer>
  <div>
    <Newsletter />
  </div>
  <h3>Kontakt</h3>
  <article class="footer_1_1">
    <div class="kontakt">
      <div>
        <b3>Booking</b3>
        <b3>Martin@bentertained.dk</b3>
      </div>
      <div>
        <b3>Sponsorater</b3>
        <b3>Oliver@podcast.dk</b3>
      </div>
      <div>
        <b3>Andet</b3>
        <b3>vanvittigverdenshistorie@gmail.com</b3>
      </div>
    </div>
    <div class="icons">
      <img
        src="./billeder/facebook.svg"
        alt="facebook billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/insta.svg"
        alt="instagram billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/spoti.svg"
        alt="sporify billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/tiktok.svg"
        alt="tiktok billede logo"
        width="20px"
        height="20px"
      />
    </div>
  </article>
</footer>

<style>
/* Footer styles */
footer {
  width: 100%;
  background-color: #ccd0c9;
  padding: 10px 20px; 
  border-top: 2px solid #a5a9a3; 
}
.footer_1_1 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start; 
  gap: 10px; 
  max-width: 1200px; 
  margin: 0 auto; 
}
.kontakt {
  display: flex;
  flex-direction: column;
  gap: 5px; 
}
.icons {
  display: flex;
  gap: 5px; 
  justify-content: flex-end; 
  align-items: center;
}
.icons img {
  cursor: pointer;
  transition: transform 0.2s ease;
}
.icons img:hover {
  transform: scale(1.1); 
}
</style>
