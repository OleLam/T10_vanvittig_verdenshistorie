---
import Newsletter from "../components/Newsletter.astro";
---
<footer>
  <div>
    <Newsletter />
  </div>

  <h2>Kontakt</h2>
  <article class="footer_1_1">
    <div>
        <h3>Booking</h3>
        <h3>Sponsorater</h3>
        <h3>Andet</h3>
      </div>
      
      <div class="mail">
        <p>vanvittigverdenshistorie@gmail.com</p>
        <p>Martin@bentertained.dk</p>
        <p>Oliver@podcast.dk</p>
      </div>
  </article>
    <div class="icons">
      <img
        src="./billeder/facebook.svg"
        alt="facebook billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/insta.svg"
        alt="instagram billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/spoti.svg"
        alt="sporify billede logo"
        width="20px"
        height="20px"
      />
      <img
        src="./billeder/tiktok.svg"
        alt="tiktok billede logo"
        width="20px"
        height="20px"
      />
    </div>
 
</footer>

<style>
/* Footer styles */

/* mobile*/

footer {
  width: 100%;
  background-color: #ccd0c9;
  padding: 10px 20px; 
  margin-bottom: 80px;
}

.footer_1_1 {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

h2, h3, p {
  color: #582d32;
}

.icons {
  display: flex;
  gap: 8px; 
  justify-content: flex-end; 
  align-items: center;
}



/* desktop */
 @media (min-width: 768px) {
  footer {
  width: 100%;
  background-color: #ccd0c9;
  padding: 10px 20px; 
  margin-bottom: 0;
  margin: 0;
}
  .footer_1_1 {
  display: grid;
  grid-template-columns: 1fr 3fr;
  margin-bottom: 0;
}

p {
  line-height: 3.5rem;
}
.icons {
  display: flex;
  gap: 16px; 
  justify-content: flex-end; 
  align-items: center;

}

.icons img {
  width: 30px;
  height: 30px;
}
}
</style>
